<Window x:Class="Hello_WorldWPF.Hello_World"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hello_WorldWPF"
        mc:Ignorable="d"
        Title="Hello_World" Height="450" Width="800">
    <Grid>
        <Grid.Effect>
            <DropShadowEffect Color="#FF0300FF"/>
        </Grid.Effect>
        <TextBox x:Name="textbox1"   HorizontalAlignment="Left" Height="23" Margin="54,37,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="125"/>
        <Button x:Name="Add_Task" Content="Add Task" HorizontalAlignment="Left" Margin="238,36,0,0" VerticalAlignment="Top" Width="89" Height="24" Click="Add_Task_Click">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <ListBox   x:Name="listbox1"   HorizontalAlignment="Left" Height="113" Margin="21,162,0,0" VerticalAlignment="Top" Width="255"/>
        <Button    Content="Remove Task" HorizontalAlignment="Left" Margin="362,39,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.218,-0.032" Click="Button_Click"/>

    </Grid>
</Window>
